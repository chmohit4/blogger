<h1> Blogs in the System </h1>
<hr/>

<%= render 'flash_message' %>

<% if @blogs.empty? %>
	<h4> No blogs created in this system! Be the first one ot create it. </h4>
<% else %>
	<ul>
		<% @blogs.each do |blog| %>
			<li> 
				<%= blog.title %> <br/>
				<%= blog.summary %> <br/>
				<%= link_to "View Blog", blog %> | <%= link_to "Edit Blog", edit_blog_path(blog) %> | 
				<%= link_to "Delete Blog", blog, { method: :delete, :confirm => "Are you sure you want to delete this Blog entry" }  %>
				
			</li>
		<% end %>
	</ul>
<% end %>

<br/>
<%= link_to "Create a New Blog", new_blog_path %>
