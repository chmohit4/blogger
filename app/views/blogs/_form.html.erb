<%= render 'layouts/error_messages', :object => @blog %>
<!-- HTML for the form >

<form action="/blogs" method="post" id="new_blog" class="">

	<label>Title</label> <br/>
	<input type="text" name="post[title]" id="" class="" value="< @blog.title >"/>
	
</form>

